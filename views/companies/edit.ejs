<% include ../partials/header %>

<form action="/companies/<%= company._id %>?_method=PUT" method="POST">
    <div class="text-center">
        <div class="col-lg-4">
            <div>
                <div class="thumbnail">
                <img class="rounded" src="<%= company.image %>">
                </div>
            </div>
            <br>
            <div>
                <p><strong><%= company.fullName %></strong></p>
            </div>
            <hr>
            <br>
                <a href="https://facebook.com"><img src="https://cdn4.iconfinder.com/data/icons/social-media-free-13/32/Facebook_social_media_logo-48.png"/></a>
                <a href="https://linkedin.com"><img src="https://cdn4.iconfinder.com/data/icons/social-media-free-13/32/Linkedin_social_media_logo-48.png"/></a>
                <a href="https://instagram.com"><img src="https://cdn4.iconfinder.com/data/icons/social-media-free-13/32/Instagram_social_media_logo-48.png"/></a>
                <a href="https://twitter.com"><img src="https://cdn4.iconfinder.com/data/icons/social-media-free-13/32/Twitter_social_media_logo-48.png"/></a>
                <a href="https://snapchat.com"><img src="https://cdn4.iconfinder.com/data/icons/social-media-free-13/32/Snapchat_social_media_logo-48.png"/></a>
        </div>
    </div>
    
    <div class="col-lg-6">
        <div>            
            <h2><%= company.fullName %></h2>
        </div>
    
        <!-- EDITABLE NAME FIELD    
        <div class="form-group">
            <h2><input class="form-control" type="text" maxlength="55" name="company[fullName]" value="<%= company.fullName %>"></h2>
        </div> -->
            
        <div class="form-group">
            <h4><input id="locationTextField" onClick="this.setSelectionRange(0, this.value.length)" class="form-control" type="text" name="company[location]" value="<%= company.location %>"></h4>
        </div>
            
        <div>
            <p>ID - <%=company._id%></p>
            <span><a class="btn btn-xs btn-default" href="/companies/<%= company._id %>/">Cancel</a>
            <button class="btn btn-xs btn-primary">Save Changes</button></span>
        </div>
    
        <hr>
            
        <div>
            <h4>Stock Ownership</h4>
            <br>
        </div>
        
        <hr>
        
        <div>
            <div class="row">
                <div class="col-lg-6">    
                    <h4>Name Stats</h4>
                        <p>nth <a href="http://wrldvwone.herokuapp.com/companies?search=<%= company.fullName %>"><%= company.fullName %></a> globally
                        <br>
                            <!--need to add ability to display each separate word from an org's name
                            nth "<font color="#337ab7"><%=company.fullName[0]%></font>" globally
                            <br>
                            nth "<font color="#337ab7"><%=company.fullName[1]%></font>" globally</p> -->
                </div>
                
                <div class="col-lg-6">
                    <h4>Location Stats</h4>
                        <p>nth company in <a href="https://www.google.com/maps/place/<%=company.location%>"><%=company.location%></a></p>
                </div>
            </div>
        </div>
            
        <hr>   
            
        <div>
            <h4>Overview</h4>
            <div class="form-group">
                <p><textarea class="form-control" type="text" rows="5" wrap="hard" maxlength="250" name="company[overview]"><%= company.overview %></textarea></p>                    
            </div>
        </div>
    </div>
</form>

<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA56qDbSumnfLh0EaLqOEQ-ukMnloGLiLI&libraries=places"></script>

        <script>
            function init() {
                var options = {
                      types: ['(cities)']
                     };
                var input = document.getElementById('locationTextField');
                var autocomplete = new google.maps.places.Autocomplete(input, options);
            }

            google.maps.event.addDomListener(window, 'load', init);
        </script>
<% include ../partials/footer %>
